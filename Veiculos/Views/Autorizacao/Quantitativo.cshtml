@{
    ViewBag.Title = "Quantitativo";
}

<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Quantitativo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="myfirstchart" style="height: 250px; "></div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
</div>

@section Css
{
    <link href="/Content/sbadmin/css/plugins/morris.css" rel="stylesheet">
}

@section Scripts
{
    <script src="/Content/sbadmin/js/plugins/morris/raphael.min.js"></script>
    <script src="/Content/sbadmin/js/plugins/morris/morris.min.js"></script>

    <script type="text/javascript">
        $(function () {

            Morris.Line({
                element: 'myfirstchart',
                data: [
                    @foreach (var m in ViewBag.dados)
                    {
                        @Html.Raw("{y: '" + @m.Ano + "-" + @m.Mes + "', total: " + @m.Total + "}, ")
                    }
                ],
                xkey: 'y',
                ykeys: ['total'],
                labels: ['Value']
            });
        });
    </script>
}
