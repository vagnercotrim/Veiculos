@model Veiculos.Infra.NHibernate.Paging<Veiculos.Models.Veiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Novo")
</p>
<table class="table">
    <tr>
        <th>
            <span>Ano do modelo / fabricação</span>
        </th>
        <th>
            <span>Marca</span>
        </th>
        <th>
            <span>Modelo</span>
        </th>
        <th>
            <span>Placa</span>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.List)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnoModelo) / @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.ActionLink("Hodometro", "Index", "Hodometro", new { id = item.Id }, null) |
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @Html.ActionLink("Detalhar", "Detalhar", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @for (int pagina = 1; pagina <= Model.TotalPage; pagina++)
    {
        if (Model.PageNum == pagina)
        {
            <strong>@pagina</strong>
        }
        else
        {
            <strong>@Html.ActionLink(pagina.ToString(), "Index", "Veiculo", new { pagina = pagina }, null)</strong>
        }
    }
</div>
