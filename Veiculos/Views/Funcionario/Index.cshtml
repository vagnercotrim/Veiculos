@using Veiculos.Infra.HtmlHelpers
@model Veiculos.Infra.NHibernate.Paging<Veiculos.Models.Funcionario>

@{
    ViewBag.Title = "Index";
}

<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Veículos
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <span>Cadastro</span>
                                </th>
                                <th>
                                    <span>Nome</span>
                                </th>
                                <th>
                                    <span>Cargo</span>
                                </th>
                                <th>
                                    <span>Ativo</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.List)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cadastro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cargo)
                                </td>
                                <td>
                                    <span>@( item.Ativo ? "sim" : "não")</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                                    @Html.ActionLink("Detalhar", "Detalhar", new { id = item.Id }) |
                                    @Html.ActionLink("Novo", "Novo", "Motorista", new { id = item.Id }, null)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>


                <div class="text-right">
                    @Html.Paginas(Model, x => Url.Action("Index", "Funcionario", new { pagina = x }))
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-12">

        <div class="text-left">
            <p>
                @Html.ActionLink("Novo", "Novo", "Funcionario", null, new { @class = "btn btn-default" })
            </p>
        </div>
    </div>
</div>